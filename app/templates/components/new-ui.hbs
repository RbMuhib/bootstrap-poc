<div class="card">
      <div class="card-body">
            <div>
                  <h1 class="ui-header">Information</h1>
                  <hr>
            </div>

      </div>

      <div class="row">
            <div class="col-lg-6">
                  <div class="container">
                        <h2 class="ui-header">Table of HR contents</h2>
                        <hr>
                        <table class="table table-hover">
                              <thead>
                                    <tr>
                                          <th>ID</th>
                                          <th>Name</th>
                                          <th>Username</th>
                                          <th>Email</th>
                                          <th>Address</th>
                                          <th>Phone</th>
                                          <th>Website</th>
                                          <th>Company</th>

                                    </tr>
                                    {{
                                          log data
                                    }}


                                    {{#each data as |info|}}
                                    <tr>
                                          <th>{{info.id}}</th>
                                          <th>{{info.name}}</th>
                                          <th>{{info.username}}</th>
                                          <th>{{info.email}}</th>
                                          <th>{{info.address.suite}}<br>{{info.address.street}}<br>{{info.address.geo.lat}}</th>
                                          <th>{{info.phone}}</th>
                                          <th>{{info.website}}</th>
                                          <th>{{info.company.name}}<br>{{info.company.catchPhrase}}<br>{{info.company.bs}}</th>
                                    </tr>
                                    {{/each}}
                              </thead>
                              <tbody>

                              </tbody>
                        </table>
                  </div>
            </div>




            <div class="col-lg-6">
                  <div class="container">
                        <h2>Registration Form</h2>
                        <hr>
                        <form>

                              <div class="row">
                                    <div class="col-sm-1"><label for="text">Name</label> </div>
                                    <div class="col-sm-11"><input type="text" class="form-control" id="name"
                                                placeholder="please enter your Name" name="name"> </div>
                              </div>

                              <br>

                              <div class="row">
                                    <div class="col-sm-1"><label for="text">Address</label> </div>
                                    <div class="col-sm-11"><input type="text" class="form-control" id="address"
                                                placeholder="please enter your Address" name="address"> </div>
                              </div>

                              <br>
                              <div class="row">
                                    <div class="col-sm-10"></div>
                                    <div class="col-sm-2">
                                          <div class="row">
                                                <div class="col-sm-5">
                                                      <div class="form-group form-check">
                                                            <label class="form-check-label">
                                                                  <input class="form-check-input" type="checkbox"
                                                                        name="true">
                                                                  True
                                                            </label>
                                                      </div>
                                                </div>


                                                <div class="col-sm-7">
                                                      <div class="form-group form-check">
                                                            <label class="form-check-label">
                                                                  <input class="form-check-input" type="checkbox"
                                                                        name="false">
                                                                  False
                                                            </label>
                                                      </div>
                                                </div>



                                          </div>
                                    </div>


                              </div>

                              <div class="row">
                                    <div class="col-sm-10"></div>
                                    <div class="col-sm-2">
                                          <div class="row">
                                                <div>
                                                      <button type="button" class="ui-button">update</button>
                                                      <button type="button" class="ui-button">Save</button>
                                                </div>

                                          </div>
                                    </div>
                              </div>
                        </form>
                  </div>
            </div>
      </div>






</div>